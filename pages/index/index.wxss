.container {
}

/* 头部 */

.navigator {
    display: flex;
    align-items: center;
    height: 6%;
    border-bottom: solid 1px #e8eaec;
}

.navigator .position {
    display: block;
    font-size: 26rpx;
    color: #515a6e;
    max-width: 110rpx;
    margin-left: 10px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

/* border在有邻边的情况下是三角形的 */
.navigator .rectangle {
    width: 0;
    height: 0;
    margin-left: 3px;
    border-top: 10rpx solid #808695;
    border-left: 10rpx solid transparent;
    border-right: 10rpx solid transparent;
}

.navigator .menu {
    display: flex;
    flex: 1;
    justify-content: center;
    font-size: 28rpx;
}

.navigator .menu .item {
    padding: 5rpx 15rpx;
}

.navigator .menu .active {
    border-bottom: solid 1px #19be6b;
}

.navigator .search {
    display: flex;
    align-items: center;
    max-width: 90rpx;
    height: 100%;
    padding: 0px 10px;
    border-left: solid 1px #e8eaec;
    font-size: 28rpx;
    color: #808695;
}

.content {
    height: 94%;
}

/* 主体内容 */

.content .list {
    height: 100%;
}

.content .list .item {
    width: calc(100% - 10px);
    height: 200rpx;
    padding: 10px;
    padding-right: 0px;
    overflow: hidden;
    border-bottom: solid 1px #e8eaec;
}

.content .list .item .image {
    display: block;
    width: 150rpx;
    height: 200rpx;
    margin-right: 10px;
    float: left;
}

.content .list .item .detail {
    width: calc(100% - 15px - 150rpx);
    font-size: 28rpx;
    color: #808695;
    padding-top: 10rpx;
    float: left;
}

.content .list .item .detail .name {
    font-size: 32rpx;
    color: #17233d;
    margin-bottom: 5px;
}

.content .list .item .detail .rating {
    margin-bottom: 2px;
}

.content .list .item .detail .rating text {
    font-size: 32rpx;
    color: #ff9900;
}

.content .list .item .detail .casts {
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-bottom: 2px;
}

.content .list .no-more {
    width: 100%;
    height: 50px;
    background-color: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
    color: #808695;
}